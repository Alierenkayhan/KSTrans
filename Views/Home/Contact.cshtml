@{
    Layout = "../Shared/_Layout";
    ViewData["Title"] = "Contact";
}

<!-- Contact Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5 justify-content-center mb-5">
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="bg-light text-center h-100 p-5">
                    <div class="btn-square bg-white rounded-circle mx-auto mb-4" style="width: 90px; height: 90px;">
                        <i class="fa fa-phone-alt fa-2x text-primary"></i>
                    </div>
                    <h4 class="mb-3">Phone Number</h4>
                    <div id="contact-phone"></div>        
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="bg-light text-center h-100 p-5">
                    <div class="btn-square bg-white rounded-circle mx-auto mb-4" style="width: 90px; height: 90px;">
                        <i class="fa fa-envelope-open fa-2x text-primary"></i>
                    </div>
                    <h4 class="mb-3">Email Address</h4>
                    <div id="contact-email"></div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="bg-light text-center h-100 p-5">
                    <div class="btn-square bg-white rounded-circle mx-auto mb-4" style="width: 90px; height: 90px;">
                        <i class="fa fa-map-marker-alt fa-2x text-primary"></i>
                    </div>
                    <h4 class="mb-3">Office Address</h4>
                    <p class="mb-2" id="contact-address"></p>
                    <a class="btn btn-primary px-4" href="https://goo.gl/maps/FsznshxgnULBGgkN9" id="map-link" target="_blank">Direction <i class="fa fa-arrow-right ms-2"></i></a>
                </div>
            </div>
        </div>
        <div class="row mb-5">
            <div class="col-12 wow fadeInUp" data-wow-delay="0.1s">
                <iframe width="100%" height="600" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=Paul%20Troger%20Gasse%2044a%202700%20Wiener%20Neustadt+(KS%20Transporte)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"><a href="https://www.gps.ie/">pet tracker</a></iframe> 
            </div>
        </div>
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                <p class="fw-medium text-uppercase text-primary mb-2">Get In Touch</p>
                <h1 class="display-5 mb-4">Have Any Questions? Reach Out To Us Anytime!</h1>
                <p class="mb-4">We are here to assist you. Whether you have a question, need support, or want to collaborate, feel free to contact us. Our team will get back to you as soon as possible.</p>
                <div class="row g-4">
                    <div class="col-6">
                        <div class="d-flex">
                            <div class="flex-shrink-0 btn-square bg-primary rounded-circle">
                                <i class="fa fa-phone-alt text-white"></i>
                            </div>
                            <div class="ms-3">
                                <h6>Call Us</h6>
                                <span id="contact-phone-2"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex">
                            <div class="flex-shrink-0 btn-square bg-primary rounded-circle">
                                <i class="fa fa-envelope text-white"></i>
                            </div>
                            <div class="ms-3">
                                <h6>Mail Us</h6>
                                <span id="contact-email-2"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                <form>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="name" placeholder="Your Name">
                                <label for="name">Your Name</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="email" class="form-control" id="email" placeholder="Your Email">
                                <label for="email">Your Email</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="subject" placeholder="Subject">
                                <label for="subject">Subject</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea class="form-control" placeholder="Leave a message here" id="message" style="height: 150px"></textarea>
                                <label for="message">Message</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary py-3 px-5" type="submit">Send Message</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {

        var aboutApi = "@ViewBag.AboutApi";

        // Hakkımızda ve çalışma saatleri bilgisini çek
        $.ajax({
            url: aboutApi,
            type: "GET",
            success: function (data) {
                if (data && data.length > 0) {
                    var contact = data[0];
                     

                    $("#contact-phone").html(`
                      <p class="mb-2" id="contact-phone">${contact.phone}</p>
                      <a class="btn btn-primary px-4" href="tel:${contact.phone}">
                        Call Now <i class="fa fa-arrow-right ms-2"></i>
                      </a>
                    `);

                    $("#contact-email").html(`
                              <p class="mb-2" id="contact-phone">${contact.email}</p>
                              <a class="btn btn-primary px-4" id="email-link" href="tel:${contact.email}">
                                Email Now <i class="fa fa-arrow-right ms-2"></i>
                          </a>
                        `);

                    $("#contact-address").text(contact.address);
                    $("#contact-phone-2").text(contact.phone);
                    $("#contact-email-2").text(contact.email);

                    $("#email-link").attr("href", "mailto:" + contact.email);
                    $("#map-link").attr("href", "https://www.google.com/maps?q=" + contact.address);

                 }
            },
            error: function (error) {
                console.error("Error fetching about info", error);
            }
        });
    });
</script>

